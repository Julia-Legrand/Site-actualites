{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
	{% include "_partials/_headerAdmin.html.twig" %}
	<main class="mainAdmin">
		<section class="row mr-0 ml-0" style="height: 100vh;">
			{% include "_partials/_sidebar.html.twig" %}
			<div class="col-md-10" id="dashboard">
				<h2>Catégories</h2>
				<table class="table">
					<thead>
						<tr>
							<th>Nom de la catégorie</th>
							<th>Modifier</th>
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
							<tr>
								<td>{{ category.nameCategory }}</td>
								<td style="display:flex; justify-content:center; align-items:center;">
									<a href="{{ path('app_categories_edit', {'id': category.id}) }}" style="margin-right:5px;;"><i class="fa-solid fa-pen" style="margin:0;"></i></a>
                                    {{ include('categories/_delete_form.html.twig') }}
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">Donnée vide</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<a href="{{ path('app_categories_new') }}"><i class="fa-solid fa-plus"></i>Ajouter une catégorie</a>
			</div>
		</section>
	</main>
{% endblock %}
